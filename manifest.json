{
  "manifest_version": 2,

  "name": "QR_CODE_SHARE",
  "description": "This extension will create a QR code for each page's link !!",
  "version": "1.2",

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "index.html"
  },
   "icons": { 
                "16": "icon-16.png", 
                "32": "icon-32.png",
                "48": "icon-48.png",  
                "128": "icon-128.png" 
        }, 
  "permissions": [
   "activeTab",
   "tabs", 
   "http://*/*", 
   "https://*/*", 
   "contextMenus",                 
   "webRequest"]
}